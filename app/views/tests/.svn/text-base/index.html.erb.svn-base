


<h1>Listing tests</h1> 
<% if current_user.is_admin? || current_user.role.name  == "Administrator" %> 
<table> 
  <tr> 
    <th>Name</th> 
    <th>Number of Questions</th> 
    <th></th> 
    <th></th> 
    <th></th> 
  </tr>

<% @tests.each do |test| %> 
  <tr> 
    <td><%= test.name %></td> 
    <td><%= test.no_of_questions %></td> 
    <td><%= link_to 'Show', test %>|</td> 
    <td><%= link_to 'Edit', edit_test_path(test) %></td> 
    <td><%#= link_to 'Destroy', test, confirm:'Are you sure?', :method =>:delete %></td> 
  </tr> 
<% end %> 
</table>

<br />

<%= link_to 'New Test', new_test_path %>

<%else%> 
<table> 
  <tr> 
    <th>SNo</th> 
    <th>Category</th> 
   

  </tr> 
  
  <% @categories.each_with_index do |category, index| %> 
  <tr> 
    <td><%= index+=1  %> </td> 
    <td><%#= category.name %><%= link_to category.name, tests_normal_show_path(category) %></td> 
   
<td><%= link_to 'Show Tests', tests_normal_show_path(category) %></td> 
   
    <td><%#= link_to 'Destroy', test, confirm:'Are you sure?', :method =>:delete %></td> 
  </tr> 
<% end %> 
</table>
<%end%>
<br />
<br />
<br />
<br />

<%= paginate @tests %>